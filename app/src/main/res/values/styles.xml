<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Number.Button" parent="Base.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">onNumberClick</item>
    </style>

    <style name="Action.Button" parent="Base.Button">
        <item name="android:textColor">@color/orange</item>
        <item name="android:onClick">onActionClick</item>
    </style>

    <style name="Equal.Button" parent="Base.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:onClick">onEqualClick</item>
    </style>
    
</resources>